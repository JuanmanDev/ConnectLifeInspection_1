<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/top_search_view" android:background="@color/colorBackground_e9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="124dp">
            <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/margin_16" android:textColor="@color/colorText_4a" android:gravity="center" android:id="@+id/search_close_btn" android:layout_width="@dimen/margin_44" android:layout_height="@dimen/margin_44" android:layout_marginLeft="@dimen/margin_6" android:layout_marginTop="@dimen/margin_10" android:text="@string/btn_main_close"/>
            <TextView android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center_horizontal" android:id="@+id/text_clear" android:paddingTop="@dimen/margin_16" android:layout_width="wrap_content" android:layout_height="@dimen/margin_56" android:layout_marginTop="@dimen/margin_6" android:minWidth="@dimen/margin_78" android:text="@string/clear" android:layout_alignParentRight="true"/>
            <EditText android:textSize="@dimen/text_size_22" android:textColor="@color/colorBlack" android:id="@+id/edit_search" android:background="@null" android:layout_width="match_parent" android:layout_height="@dimen/margin_48" android:layout_marginLeft="@dimen/margin_20" android:layout_marginBottom="@dimen/margin_6" android:hint="@string/wine_name" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/normal_top_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/title_layout" android:background="@color/colorStatus" android:layout_width="match_parent" android:layout_height="@dimen/margin_44" android:elevation="12px">
                <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/margin_16" android:textColor="@color/colorText_4a" android:gravity="center" android:id="@+id/top_back" android:layout_width="@dimen/margin_44" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_6" android:text="@string/btn_main_back"/>
                <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/top_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_20" android:text="@string/inventory" android:layout_toLeftOf="@+id/top_next" android:layout_toRightOf="@+id/top_back" android:fontFamily="@font/proximanova_medium"/>
                <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_20" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/search_icon" android:layout_width="@dimen/margin_44" android:layout_height="match_parent" android:layout_marginRight="@dimen/margin_10" android:text="@string/btn_main_search" android:layout_toLeftOf="@+id/filter_layout"/>
                <LinearLayout android:id="@+id/filter_layout" android:paddingRight="@dimen/margin_16" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
                    <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_16" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/filter_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/margin_8" android:text="@string/icon_main_filter" android:layout_toLeftOf="@+id/filter_text"/>
                    <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/filter_count" android:background="@drawable/inventory_filter_count_text_bg" android:visibility="gone" android:layout_width="@dimen/margin_22" android:layout_height="@dimen/margin_22" android:layout_marginRight="@dimen/margin_8" android:text="0" android:layout_toLeftOf="@+id/filter_text" android:layout_centerVertical="true"/>
                    <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/filter_text" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/inventory_filters" android:fontFamily="@font/proximanova_semibold"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:id="@+id/radioGroup_layout" android:background="@color/colorWhite" android:paddingLeft="@dimen/margin_16" android:paddingTop="@dimen/margin_10" android:paddingRight="@dimen/margin_16" android:paddingBottom="@dimen/margin_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_layout">
                <RadioGroup android:orientation="horizontal" android:background="@drawable/rounded_rectangle_gray" android:padding="@dimen/margin_6" android:layout_width="match_parent" android:layout_height="@dimen/margin_34">
                    <RadioButton android:textColor="@drawable/text_color_inventory" android:gravity="center" android:id="@+id/wine_list" android:background="@drawable/background_color_inventory" android:layout_width="0dp" android:layout_height="match_parent" android:checked="true" android:button="@null" android:text="@string/inventory_wine_list" android:layout_weight="1"/>
                    <RadioButton android:textColor="@drawable/text_color_inventory" android:gravity="center" android:id="@+id/wine_cabinet" android:background="@drawable/background_color_inventory" android:layout_width="0dp" android:layout_height="match_parent" android:button="@null" android:text="@string/inventory_wine_cabinet" android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/count_filter_layout_activity" android:background="@color/colorBackground_e" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/top_view">
        <LinearLayout android:orientation="horizontal" android:id="@+id/bottles_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_16" android:layout_marginTop="@dimen/margin_16" android:layout_marginRight="@dimen/margin_4" android:layout_alignParentLeft="true">
            <TextView android:textSize="@dimen/text_size_14" android:textColor="@color/colorBlack" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/inventory_bottles_count_title" android:fontFamily="@font/proximanova_semibold"/>
            <TextView android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_gravity="center_vertical" android:id="@+id/bottles_size_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/sort_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_16" android:layout_marginRight="@dimen/margin_32" android:layout_toRightOf="@+id/bottles_layout">
            <TextView android:textSize="@dimen/text_size_14" android:textColor="@color/colorBlack" android:ellipsize="end" android:id="@+id/sort_text_name" android:paddingLeft="@dimen/margin_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_4" android:text="@string/name_small" android:singleLine="true" android:layout_toLeftOf="@+id/filter_ic" android:layout_centerVertical="true" android:fontFamily="@font/proximanova_semibold"/>
            <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_8" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/filter_ic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_main_unfold_down" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/inventory_fl" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/count_filter_layout_activity"/>
    <com.hisense.connect_life.core.widget.DragCustomView android:orientation="horizontal" android:id="@+id/add_wine_layout" android:background="@drawable/button_next_select_bg" android:paddingLeft="@dimen/margin_16" android:paddingTop="@dimen/margin_8" android:paddingRight="@dimen/margin_16" android:paddingBottom="@dimen/margin_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_34" android:layout_marginBottom="@dimen/margin_24" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:elevation="12px">
        <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_22" android:textColor="@color/colorWhite" android:layout_gravity="center_vertical" android:id="@+id/ic_add_wine" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_dashboard_add_wine" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/text_add_wine" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_12" android:text="@string/inventory_add_wine" android:layout_toRightOf="@+id/ic_add_wine" android:layout_centerVertical="true" android:fontFamily="@font/proximanova_extrabold"/>
    </com.hisense.connect_life.core.widget.DragCustomView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/coordinator" android:layout_width="match_parent" android:layout_height="@dimen/margin_60" android:layout_marginBottom="@dimen/margin_100" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/margin_16" android:layout_marginEnd="@dimen/margin_16"/>
</RelativeLayout>
