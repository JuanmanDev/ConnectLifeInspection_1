<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="52dp" android:layout_height="52dp" android:layout_marginTop="148dp" android:src="@drawable/icon_error_51" android:scaleType="center"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="140dp">
        <TextView android:textSize="@dimen/text_size_20" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="46dp" android:text="ERROR" android:layout_marginStart="@dimen/margin_32"/>
        <LinearLayout android:orientation="vertical" android:layout_width="312dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_24" android:layout_marginStart="@dimen/margin_32">
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/something_went_wrong"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/try_scanning_the_qr"/>
            <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:id="@+id/tv_open_manual" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/open_appliance_manual"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_16" android:layout_marginRight="@dimen/margin_16" android:layout_marginBottom="20dp">
            <Button android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/single_zone_pairing_error_back" android:background="@drawable/button_circle_solid" android:layout_width="match_parent" android:layout_height="44dp" android:text="BACK" android:layout_above="@+id/single_zone_pairing_error_cancel"/>
            <Button android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorBlack" android:id="@+id/single_zone_pairing_error_cancel" android:background="@drawable/button_circle_black" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginBottom="20dp" android:text="CANCEL" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
