    <TextView android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="end" android:id="@+id/add_ticket_confirm" android:background="@drawable/button_region_dialog_bg" android:layout_width="104dp" android:layout_height="35dp" android:layout_marginBottom="@dimen/margin_16" android:text="@string/close" android:layout_marginEnd="@dimen/margin_16"/>
</LinearLayout>
