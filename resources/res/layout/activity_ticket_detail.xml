    <LinearLayout android:orientation="horizontal" android:id="@+id/service_order_id_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_12" android:layout_marginStart="@dimen/margin_32">
