    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_12" android:layout_marginStart="@dimen/margin_32">
        <TextView android:textSize="@dimen/text_size_12" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tickets_date_closed"/>
        <TextView android:textSize="@dimen/text_size_12" android:textColor="@color/colorBlack" android:id="@+id/ticket_closed_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
