<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/container" android:background="@color/colorBackground_e" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/account_top_bar"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="48dp" android:contentDescription="@string/app_name" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@drawable/bg_userprofile_edit_round" android:paddingTop="0dp" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:layout_marginTop="40dp" android:text="@string/rest_pwd_hint" android:fontFamily="@font/proximanova_extrabold" style="@style/title_reset_password_text_style"/>
                <TextView android:layout_marginTop="20dp" android:text="@string/reset_password_tips_1" style="@style/reset_password_content_text_style"/>
                <TextView android:textSize="@dimen/text_size_20" android:textColor="@color/colorBlack" android:id="@+id/tv_title_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/setting_email" android:fontFamily="@font/proximanova_semibold" android:layout_marginStart="32dp"/>
                <LinearLayout android:id="@+id/ll_et_email_bg" style="@style/layout_edit_input_new_style">
                    <EditText android:textColorHint="#757575" android:id="@+id/sign_email" android:hint="@string/email" android:inputType="textEmailAddress" android:fontFamily="@font/proximanova_extrabold" android:textDirection="anyRtl" android:textAlignment="viewStart" android:layout_marginEnd="8dp" android:importantForAutofill="2" style="@style/edit_input_in_layout_style"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="@color/color_error_text_02" android:id="@+id/tv_error_email" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/edit_textinput_hint_style"/>
                <Button android:id="@+id/next" android:background="@drawable/button_bottom_green_round_selector" android:layout_marginTop="60dp" android:text="@string/get_verification_code" android:fontFamily="@font/proximanova_extrabold" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/bottom_btn_match_style"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
