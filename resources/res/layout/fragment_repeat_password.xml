<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/account_top_bar"/>
    <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_18" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="@string/icon_login_logo" android:layout_marginStart="@dimen/margin_28"/>
    <TextView android:textSize="@dimen/text_size_18" android:textStyle="bold" android:textColor="@color/colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="110dp" android:text="@string/repeat_password" android:layout_marginStart="@dimen/margin_32"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_26">
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/tv_error_password" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:hintEnabled="false">
            <EditText android:textSize="@dimen/text_size_20" android:textColor="@color/colorBlack" android:id="@+id/sign_password" android:background="@null" android:layout_width="match_parent" android:layout_height="24dp" android:hint="@string/your_password" android:lines="1" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.hisense.connect_life.core.widget.IconFontView android:textSize="@dimen/text_size_20" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/show_hide_password_repeat" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/icon_login_password_show"/>
    </LinearLayout>
</LinearLayout>
