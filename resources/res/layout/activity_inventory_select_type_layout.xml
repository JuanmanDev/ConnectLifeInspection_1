        </RelativeLayout>
        <Space android:layout_width="@dimen/margin_20" android:layout_height="wrap_content"/>
        <RelativeLayout android:id="@+id/exact_positioning_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <com.hisense.connect_life.core.widget.IconFontView android:textSize="128sp" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/exact_type_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_10" android:text="@string/type_inventory_sel_lie" android:layout_toLeftOf="@+id/filter_text" android:layout_centerHorizontal="true"/>
