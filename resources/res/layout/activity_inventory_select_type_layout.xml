    <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/margin_16" android:paddingRight="@dimen/margin_16" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_24">
        <RelativeLayout android:id="@+id/generic_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
