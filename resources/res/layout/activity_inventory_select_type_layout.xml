        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_size_26" android:textColor="@color/colorBlack" android:id="@+id/inventory_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_32" android:layout_marginTop="@dimen/margin_24" android:text="@string/inventory_type_generic" android:fontFamily="@font/proximanova_extrabold"/>
    <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:id="@+id/inventory_type_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_32" android:layout_marginTop="@dimen/margin_24" android:layout_marginRight="@dimen/margin_32" android:text="@string/inventory_type_generic_tips" android:fontFamily="@font/proximanova_regular"/>
    <Space android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:enabled="true" android:textColor="@color/colorWhite" android:id="@+id/next" android:background="@drawable/button_next_select_bg" android:layout_width="@dimen/margin_100" android:layout_margin="20dp" android:layout_marginBottom="@dimen/margin_42" android:layout_marginEnd="@dimen/margin_32" style="@style/next_btn_style_translate"/>
    </RelativeLayout>
</LinearLayout>
