        </FrameLayout>
        <TextView android:textSize="@dimen/text_size_14" android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/use_text" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/use" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
