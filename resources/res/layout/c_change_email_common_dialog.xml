<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/text_size_20" android:textStyle="bold" android:textColor="@color/colorBlack" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_32" android:text="@string/security_verification" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_32"/>
    <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/colorBlack" android:gravity="bottom" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_20" android:text="@string/change_email_tips_1" android:minLines="2" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_32"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_password" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_16" layout="@layout/c_change_email_input_password"/>
        <TextView android:textSize="@dimen/text_size_12" android:textColor="@color/color_b00020" android:gravity="bottom" android:id="@+id/tv_error_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/change_email_error_pwd" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_32"/>
        <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/color_166ec4" android:gravity="bottom" android:id="@+id/tv_switch_to_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/verify_by_email" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_16"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_old_code" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_16" layout="@layout/c_change_email_input_verification_code"/>
        <TextView android:textSize="@dimen/text_size_12" android:textColor="@color/colorBlack" android:gravity="bottom" android:id="@+id/tv_new_email_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/change_email_tips_4" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_40" android:layout_marginEnd="@dimen/margin_40"/>
        <TextView android:textSize="@dimen/margin_12" android:textColor="@color/color_b00020" android:gravity="bottom" android:id="@+id/tv_error_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/change_email_error_code" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_32"/>
        <TextView android:textSize="@dimen/text_size_16" android:textColor="@color/color_166ec4" android:gravity="bottom" android:id="@+id/tv_switch_to_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/verify_by_password" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_16"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_email" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_16" layout="@layout/c_change_email_input_email"/>
        <TextView android:textSize="@dimen/margin_12" android:textColor="@color/color_b00020" android:gravity="bottom" android:id="@+id/tv_error_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/change_email_error_code" android:textAlignment="gravity" android:layout_marginStart="@dimen/margin_32" android:layout_marginEnd="@dimen/margin_32"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <View android:background="@drawable/bg_top_shadow" android:layout_width="match_parent" android:layout_height="5dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorBlack" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/button_circle_dc_rec_right" android:visibility="gone" android:layout_width="0dp" android:layout_height="44dp" android:text="@string/cancel" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_certain" android:background="@drawable/button_circle_blue_rec_left" android:layout_width="0dp" android:layout_height="44dp" android:text="@string/next" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
